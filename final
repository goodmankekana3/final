    margin: 0;
    overflow: hidden;
    font-family: 'Segoe UI', sans-serif;
    color: white;
}

/* Background slideshow */
.background {
    position: fixed;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    animation: zoom 20s infinite alternate;
    transition: background-image 2s ease-in-out;
    filter: blur(6px) brightness(0.6);
    z-index: -2;
}

.overlay {
    position: fixed;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom right, rgba(255,0,150,0.3), rgba(0,0,0,0.7));
    z-index: -1;
}

@keyframes zoom {
    from { transform: scale(1); }
    to { transform: scale(1.1); }
}

.screen {
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    text-align: center;
    padding: 20px;
}

h2 {
    max-width: 90%;
    font-weight: 400;
}

button {
    padding: 15px 35px;
    font-size: 18px;
    border-radius: 30px;
    border: none;
    cursor: pointer;
    transition: 0.3s ease;
}

button:hover {
    transform: scale(1.1);
}

#startBtn { background: white; color: hotpink; }
#continueBtn { margin-top: 20px; background: #ffffffcc; }
#yesBtn { background: hotpink; color: white; }
#noBtn { background: #333; color: white; position: absolute; }

.hidden { display: none; }

.heart {
    position: absolute;
    animation: float 6s linear infinite;
}

